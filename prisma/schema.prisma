// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model api_keys{
  ID Int @id @default(autoincrement())
  Name String @unique
  API_key String @default(uuid())
  Blocked Boolean @default(true)
  Admin Boolean @default(false)

  permissions permissions[]
  collections question_collection[]
}

model permissions{
  ID String @id @default(uuid())
  APIID Int 
  permission String
  
  API api_keys @relation(fields: [APIID], references:[ID])
}

model question_collection{
  ID Int @id @default(autoincrement())
  Name String @unique
  AuthorID Int
  bool_q bool_q[]
  string_q string_q[]
  multiple_q multiple_q[]

  Author api_keys @relation(fields: [AuthorID], references:[ID])
}

model bool_q{
  ID String @id @default(uuid())
  question String
  Answer Boolean
  CollectionID Int

  Collection question_collection @relation(fields: [CollectionID], references:[ID])
}

model string_q{
  ID String @id @default(uuid())
  question String
  Answer String
  CollectionID Int

  Collection question_collection @relation(fields: [CollectionID], references:[ID])
}

model multiple_q{
  ID String @id @default(uuid())
  CollectionID Int
  question String
  ListAnswers multiple_qa[]
  
  Collection question_collection @relation(fields: [CollectionID], references:[ID])
}

model multiple_qa{
  ID String @id @default(uuid())
  Text String
  multiple_qa String
  Answer Boolean @default(false)

  Question multiple_q @relation(fields: [multiple_qa], references:[ID])
}